<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".addTask"
    style="@style/ScreenBackground">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:src="@drawable/sign_out"
        app:shapeAppearanceOverlay="@style/roundAddBtn"
        android:id="@+id/backAddTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/backAddTask"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/btn"
        style="@style/Button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
        <ImageView
            android:id="@+id/icon"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/tm_icon"
            android:layout_gravity="center"
            style="@style/Imagebg"
            android:layout_margin="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/backAddTask"
            app:layout_constraintBottom_toTopOf="@id/innerFrame"
            />
    <LinearLayout
        android:id="@+id/innerFrame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
        <EditText
            android:id="@+id/taskName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/textview"
            style="@style/viewBackground"
            android:layout_margin="10dp"
            android:hint="@string/name"
            android:textColorHint="@color/DarkBackground"
            />
        <EditText
            android:id="@+id/taskDeadlineDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/textview"
            style="@style/viewBackground"
            android:layout_margin="10dp"
            android:focusable="false"
            android:inputType="none"
            android:hint="@string/deadline_date"
            android:textColorHint="@color/DarkBackground"/>
        <EditText
            android:id="@+id/taskDeadlineTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/textview"
            style="@style/viewBackground"
            android:layout_margin="10dp"
            android:focusable="false"
            android:inputType="none"
            android:hint="@string/deadline_time"
            android:textColorHint="@color/DarkBackground"/>

        <EditText
            android:id="@+id/taskPriority"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/textview"
            style="@style/viewBackground"
            android:layout_margin="10dp"
            android:inputType="numberDecimal"
            android:hint="@string/priority"
            android:textColorHint="@color/DarkBackground"/>
        <EditText
            android:id="@+id/taskDuration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/textview"
            style="@style/viewBackground"
            android:layout_margin="10dp"
            android:inputType="numberDecimal"
            android:hint="@string/duration"
            android:textColorHint="@color/DarkBackground"/>
    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:src="@drawable/add"
        app:shapeAppearanceOverlay="@style/roundAddBtn"
        android:id="@+id/registerTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:text="@string/btn_add"
        android:background="@drawable/btn"
        style="@style/Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>