<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".BudgetTrackerFragment">
        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/budget_tracker"
            android:textColor="@color/black"
            android:layout_marginBottom="15dp"
            android:textSize="26dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/expenseData"/>
        <LinearLayout
            android:id="@+id/expenseData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv"
            app:layout_constraintBottom_toTopOf="@id/exp"
            android:background="@drawable/item"
            android:layout_margin="5dp"
            style="@style/viewBackground"
            android:gravity="center"
            android:padding="10dp"
            >
                <TextView
                    android:id="@+id/Income"
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    style="@style/TextColor"
                    android:gravity="center"
                    android:text="@string/income"
                    android:layout_margin="3dp">

                </TextView>
                <TextView
                    android:id="@+id/Spent"
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    style="@style/TextColor"
                    android:gravity="center"
                    android:layout_margin="3dp"
                    >

                </TextView>
                <TextView
                    android:id="@+id/Savings"
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:text="@string/savings"
                    style="@style/TextColor"
                    android:gravity="center"
                    android:layout_margin="3dp">

                </TextView>

        </LinearLayout>
        <TextView
            android:id="@+id/exp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/expenses"
            android:textColor="@color/black"
            android:textSize="26dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/expenseData"
            app:layout_constraintBottom_toTopOf="@id/expenseListRV"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/expenseListRV"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/btnAddExpense"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/exp"
            android:layout_marginBottom="10dp" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:src="@drawable/add"
        android:id="@+id/btnAddExpense"
        app:shapeAppearanceOverlay="@style/roundAddBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:text="@string/btn_add"
        style="@style/Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>