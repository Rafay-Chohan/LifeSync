<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.LifeSync" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/LightText</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="android:statusBarColor">@color/LightBackground</item>
    </style>

    <style name="Theme.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenIconBackgroundColor">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_icon</item>
        <!-- Set the theme of the Activity that follows your splash screen.-->
        <item name="postSplashScreenTheme">@style/Theme.LifeSync</item>
    </style>

    <style name="Secondary" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="android:statusBarColor">@color/LightBackground</item>
    </style>

    <style name="Theme.LifeSync" parent="Base.Theme.LifeSync" />

    <style name="ScreenBackground">
        <item name="android:background">@color/LightBackground</item>
    </style><!--Works-->
    <style name="Button">
        <item name="android:backgroundTint">@color/LightIcon</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:tint">@color/white</item>
    </style><!--Works-->
    <style name="viewBackground">
        <item name="android:backgroundTint">@color/LightViewBackground</item>
        <item name="android:textColor">@color/LightText</item>
    </style><!--Works-->
    <style name="TextColor">
        <item name="android:textColor">@color/LightText</item>
    </style><!--Works-->
    <style name="Imagebg">
        <item name="android:backgroundTint">@color/LightViewBackground</item>
    </style><!--Works-->
    <style name="roundAddBtn">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="CustomTabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabIndicatorColor">@color/black</item>
        <item name="tabTextColor">@color/LightViewBackground</item>
        <item name="tabSelectedTextColor">@color/black</item>
        <item name="tabIndicatorHeight">4dp</item>
        <item name="android:background">@color/LightViewBackground</item>
    </style>

    <style name="Theme.Starting.AppWidgetContainerParent" parent="@android:style/Theme.DeviceDefault">
        <!-- Radius of the outer bound of widgets to make the rounded corners -->
        <item name="appWidgetRadius">16dp</item>
        <!--
        Radius of the inner view's bound of widgets to make the rounded corners.
        It needs to be 8dp or less than the value of appWidgetRadius
        -->
        <item name="appWidgetInnerRadius">8dp</item>
    </style>

    <style name="Theme.Starting.AppWidgetContainer" parent="Theme.Starting.AppWidgetContainerParent">
        <!-- Apply padding to avoid the content of the widget colliding with the rounded corners -->
        <item name="appWidgetPadding">16dp</item>
    </style>
</resources>